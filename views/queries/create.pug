extends ../layout/layout

block custom-head
  title Kyselyn luonti
  link(rel='stylesheet', href='//cdn.metatavu.io/libs/flatpickr/2.6.1/flatpickr.min.css')
  script(defer='defer',src='//cdn.metatavu.io/libs/moment/2.17.1/moment-with-locales.js')
  script(defer='defer',src='//cdn.metatavu.io/libs/flatpickr/2.6.1/flatpickr.js',type='text/javascript')
  script(defer='defer',src='//cdn.metatavu.io/libs/flatpickr/2.6.1/l10n/fi.js',type='text/javascript')
  script(defer='defer',src='//cdn.metatavu.io/libs/bootbox-js/4.4.0/bootbox.min.js',type='text/javascript')
  script(defer='defer',src='//cdn.metatavu.io/libs/bootstrap-colorpicker/2.5.1/js/bootstrap-colorpicker.min.js',type='text/javascript')
  link(rel='stylesheet', href='//cdn.metatavu.io/libs/bootstrap-colorpicker/2.5.1/css/bootstrap-colorpicker.min.css')
  script(defer='defer',src='/js/create-query.js',type='text/javascript')
block body
  .container   
    form
      .row
        .col-12
          h1
            |Kyselyn luonti
      
      .row
        .col-12
          .card.card-inverse
            form
              .row
                .col-12
                  .form-group.row
                    .col-12
                      label
                        |Nimi
                    .col-12
                      input.form-control(type="text",name="name",title="Nimi",required=true,placeholder="Kirjoita kyselyn nimi")
                      small.form-text
                        |Kyselyn nimeä käytetään erilaisissa listauksissa
                        .row
              .row
                .col-12
                  .form-group.row
                    .col-12
                      label
                        |Teesi
                    .col-12
                      textarea.form-control(name="thesis",title="Teesi",required=true,placeholder="Kyselyn teesi")
                      small.form-text
                        |Kirjoita kenttään kyselyn väite
              .row
                .col-12
                  .form-group.row
                    .col-12
                      label
                        |X-akselin nimi
                    .col-12
                      textarea.form-control(name="labelx",title="X-Akselin nimi",required=true,placeholder="X-Akselin nimi")
                      small.form-text
                        |Kirjoita X-akselin nimi esim. Toivottavaa
              .row
                .col-12
                  .form-group.row
                    .col-12
                      label
                        |X-akselin väri
                    .col-12
                      select.form-control(name="colorx")
                        option(value="RED",selected=true)
                          |Punainen
                        option(value="GREEN")
                          |Vihreä
                        option(value="BLUE")
                          |Sininen
                      small.form-text
                        |Aseta X-akselin väri
              .row
                .col-12
                  .form-group.row
                    .col-12
                      label
                        |Y-akselin nimi
                    .col-12
                      textarea.form-control(name="labely",title="Y-Akselin nimi",required=true,placeholder="Y-Akselin nimi")
                      small.form-text
                        |Kirjoita Y-akselin nimi esim. Todennäköistä
              .row
                .col-12
                  .form-group.row
                    .col-12
                      label
                        |Y-akselin väri
                    .col-12
                      select.form-control(name="colory")
                        option(value="RED")
                          |Punainen
                        option(value="GREEN")
                          |Vihreä
                        option(value="BLUE",selected=true)
                          |Sininen
                      small.form-text
                        |Aseta Y-akselin väri
              .row
                .col-12
                  .form-group.row
                    .col-12
                      label
                        |Alkuaika
                    .col-12
                      input.form-control(type="text",name="start",title="Alkuaika",required=true,data-type="date-time")
                      small.form-text
                        |Kysely on vastattavissa tästä ajankohdasta alkaen
              .row
                .col-12
                  .form-group.row
                    .col-12
                      label
                        |Loppuaika
                    .col-12
                      input.form-control(type="text",name="end",title="Loppuaika",required=true,data-type="date-time")
                      small.form-text
                        |Kysely on vastattavissa tähän ajankohtaan saakka
              .row
                .col-12
                  .form-group.row
                    .col-12
                      label
                        |Alueen taustavärit
                  .row
                    .col-6.no-gutter-right
                      input.form-control(type="text",name="segment1Background",title="Ylä-vasen",data-type="color")
                    .col-6.no-gutter-left
                      input.form-control(type="text",name="segment2Background",title="Ylä-oikea",data-type="color")
                  .row
                    .col-6.no-gutter-right
                      input.form-control(type="text",name="segment3Background",title="Ala-vasen",data-type="color")
                    .col-6.no-gutter-left
                      input.form-control(type="text",name="segment4Background",title="Ala-oikea",data-type="color")
              .row
                .col-12
                  .form-group.row
                    .col-12
                      input.btn.btn-lg.btn-primary(type="submit",value="Luo kysely")

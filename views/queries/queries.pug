extends ../layout/layout

block custom-head
  title Kyselyt
  script(defer='defer',src='//cdn.metatavu.io/libs/bootbox-js/4.4.0/bootbox.min.js',type='text/javascript')
  script(defer='defer',src='/js/queries.js',type='text/javascript')
block body
  .container   
    form
      .row
        .col-12
          h1
            |Kyselyt
      .row
        .col-12
          .card.card-inverse
            .card-block
              h4.card-title
                |Aktiiviset kyselyt
              ul.list-group              
                each query in queries
                  li.list-group-item.d-flex
                    .col-8.no-gutter-left.d-flex.justify-content-start.query-name
                      =query.name
                    .col-4.no-gutter-right.d-flex.justify-content-end
                      a.btn.btn-sm.btn-success(href="queries/live?id=" + query.id)
                        |Live-katselu
                    